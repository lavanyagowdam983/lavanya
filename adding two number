#include<stdio.h>

int getinput(int *a,int *b)
{
	printf("enter the values of a\n");
	scanf("%d",a);
	printf("enter the values of a\n");
	scanf("%d",b);	
	return 0;
}
 

int add(int a,int b)
{
	int c;
	c=a+b;
	return c;
}

int output(int a,int b,int c)
{
	printf("the sum of %d and %d is %d \n",a,b,c);
	return 0;
}
 
int main()
{
	int x,y,sum;
	getinput(&x,&y);
	sum=add(x,y);
	output(x,y,sum);
}
